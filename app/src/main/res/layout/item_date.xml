<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/item_dating_cardview_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.acemurder.datingme.component.widget.CircleImageView
                    android:id="@+id/item_dating_tv_portrait"
                    android:layout_alignLeft="@+id/item_dating_iv_image"
                    android:layout_alignTop="@+id/item_dating_iv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/item_dating_tv_name"
                    android:layout_toRightOf="@+id/item_dating_tv_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfsf"/>
                <ImageView
                    android:id="@+id/item_dating_iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/item_dating_tv_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/item_dating_iv_image"
                    android:layout_alignTop="@+id/item_dating_iv_image"
                    android:text="hello"/>
            </RelativeLayout>
        <TextView
            android:id="@+id/item_dating_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="dsfsfdfagdgdgdga"
            android:textColor="@color/cardview_dark_background"
            android:textSize="25sp"
            android:maxLines="2"
            android:ellipsize="end"/>
            <TextView
                android:id="@+id/item_dating_tv_content"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="dfhkshfkshfdj"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/item_dating_iv_share"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_black_18px"/>
                <ImageView
                    android:id="@+id/item_dating_iv_chat"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_bubble_outline_black_18px"/>

                <ImageView
                    android:id="@+id/item_dating_iv_accept"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_accept"/>
            </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>