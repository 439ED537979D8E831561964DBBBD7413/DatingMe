<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".modules.main.MainActivity">
    <android.support.v4.view.ViewPager
        android:layout_alignParentTop="true"
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="570dp"/>

    <com.gigamole.navigationtabbar.ntb.NavigationTabBar
        android:layout_below="@+id/vpPager"
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        app:ntb_active_color="#fff"
        app:ntb_animation_duration="400"
        app:ntb_badge_bg_color="#ffff0000"
        app:ntb_badge_gravity="top"
        app:ntb_badge_position="right"
        app:ntb_badge_size="10sp"
        app:ntb_badge_title_color="#ffffffff"
        app:ntb_badge_use_typeface="true"
        app:ntb_badged="true"
        app:ntb_bg_color="@color/white"
        app:ntb_icon_size_fraction="0.5"
        app:ntb_inactive_color="@color/colorGrey"
        app:ntb_scaled="true"
        app:ntb_swiped="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_title_size="10sp"
        app:ntb_titled="true"
        app:ntb_typeface="fonts/custom_typeface.ttf"/>

</RelativeLayout>
