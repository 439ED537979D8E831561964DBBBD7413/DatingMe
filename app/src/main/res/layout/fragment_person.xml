
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_grey"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_page_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_layout"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp">

                <com.acemurder.datingme.component.widget.CircleImageView
                    android:id="@+id/my_page_avatar"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/moiling"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_page_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:text="acemurder"
                            android:textColor="@color/primary_text"
                            android:textSize="15sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_page_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



            <RelativeLayout
                android:id="@+id/my_page_relate_layout"
                android:layout_width="match_parent"
                android:background="@drawable/bg_layout"
                android:layout_height="42dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_relate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_relate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_relate"
                    android:text="我的约"
                    android:textColor="@color/primary_text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_trend_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"

                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_trend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_trend"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_trend"
                    android:text="约我的"
                    android:textColor="@color/primary_text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/my_page_grade_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingLeft="24dp"
                android:background="@drawable/bg_layout"

                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_grade"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_grade"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_grade"
                    android:text="反馈"
                    android:textColor="@color/primary_text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/my_page_no_course_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="24dp"
                android:background="@drawable/bg_layout"

                android:paddingStart="24dp">


                <ImageView
                    android:id="@+id/my_page_iv_no_course"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_no_course"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_no_course"
                    android:text="设置"
                    android:textColor="@color/primary_text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
