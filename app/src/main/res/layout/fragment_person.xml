<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:background="@drawable/ic_beauty">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fragment_person_tv_name"
                    android:text="Alice314"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/fragment_person_tv_sex"
                    android:text="女"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.acemurder.datingme.component.widget.CircleImageView
                    android:id="@+id/fragment_person_portrait"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="110dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/moiling"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="82dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/signature"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="个性签名:"
                    android:textSize="16dp"
                    android:textColor="@color/icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fragment_person_signature_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/secondary_text"
                    android:maxWidth="240dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="人民网北京8月23日电 经过卓有成效的陆基训练，日前，又一批舰载机飞行员驾驶国产歼—15舰载战斗机在辽宁舰上成功进行阻栏着舰和滑跃起飞，
                    通过航母飞行资质认证，实现了我国舰载战斗机飞行员由军地协作向海军"/>
            </LinearLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/fragment_person_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ad000000"
                android:layout_gravity="bottom"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_person_vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:flipInterval="30"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:persistentDrawingCache="animation"/>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>